{
  "name": "ts-looks-like",
  "version": "3.0.0",
  "description": "Helper function to generate TypeScript type guards from an example instance",
  "main": "lib/src/index.js",
  "typings": "lib/src/index",
  "engines": {
    "node": ">=10.0"
  },
  "files": [
    "lib/src/",
    "src/"
  ],
  "author": "Tamas Nepusz",
  "bugs": "https://github.com/ntamas/ts-looks-like/issues",
  "license": "MIT",
  "keywords": [
    "typescript",
    "type guard",
    "generator",
    "type checking"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ntamas/ts-looks-like.git"
  },
  "scripts": {
    "build": "tsc",
    "doc": "typedoc src/",
    "lint": "tslint --project tsconfig.json --format stylish",
    "prepare": "npm run build",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "start": "nodemon -e js,jsx,ts,tsx,json -w src -w test --exec npm test",
    "test": "mocha --config=test/.mocharc.yml",
    "test:cover": "nyc mocha --config=test/.mocharc.yml"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "src/types.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-spies": "^1.0.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "mocha": "^8.3.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.34",
    "typescript": "^4.2.3"
  }
}
